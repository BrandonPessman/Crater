      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^6.0.10",
    "electron-builder": "^21.2.0"
  },
  "main": "src/electron.js",
  "build": {
    "appId": "seescript.id",
    "mac": {
      "category": "svg.design.tool"
    },
    "files": [
      "build/**/*",
      "package.json",
      "./src/electron.js"
    ]
  }
